<Window x:Class="hw_03._01._2023_notebook.GotoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hw_03._01._2023_notebook"
        mc:Ignorable="d"
             Title="Go To Line" Height="120" Width="250" ResizeMode="NoResize"
        Padding="10" Loaded="Window_Loaded" >
    <StackPanel>
        <Label>Line number:</Label>
        <TextBox Name="txtLineNumber" PreviewTextInput="txtLineNumber_PreviewTextInput" TextChanged="txtLineNumber_TextChanged"></TextBox>
        <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Right">
            <Button Name="btnGoto" IsDefault="True" Click="btnGoto_Click" Width="75" >Go To</Button>
            <Button IsCancel="True" Width="75" Margin="10,0,0,0">Cancel</Button>
        </StackPanel>
    </StackPanel>
</Window>
